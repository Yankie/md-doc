<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or site.title }}</title>
  <meta name="description" content="{{ description or site.description }}">
  {# <link rel="stylesheet" media="screen" href="/assets/css/styles.css"> #}
  {# <link rel="stylesheet"  media="print" href="/assets/css/print.css"> #}
  <link rel="stylesheet" href="/assets/css/print.css">

</head>
<body>
  <!-- Title Page -->
  <section class="fullpage">
    <div class="p-4" style="display: flex; flex-direction: column; align-items: center;">
      <div class="p-4" style="width: 33%;">
        <img src="/assets/images/niime-logo.svg" style="width: 100%; height: auto;">
      </div>
      <div  class="p-4" style="display: flex; flex-direction: column; align-items: center;">
        <p class="text-5xl">{{ site.title }}</p>
        <p class="text-sm">{{ site.description }}</p>
      </div>
      <div class="p-4">
        <p>&copy {{ page.date.getFullYear() }}, {{ site.author }}</p>
      </div>
    </div>
  </section>

  <article id="book-internal" class="prose prose max-w-screen-lg">

    <!-- TOC -->

    {% if content | toc({"tags": ["h1", "h2"]}) %}
    <section id="toc">
      <h1>Содержание</h1>
      {{ content | toc({"tags": ["h1", "h2", "h3", "h4", "h5", "h6"],"wrapper":"div","wrapperClass":"print-toc"}) | safe }}
    </section>
    {% endif %}

    <!-- Rest of content -->

    {{ content | safe }}

  </article>
  <script type="module" src="/assets/js/script.js"></script>
</body>
</html>
